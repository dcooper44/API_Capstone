@{
}
@model API_Capstone.Models.ViewModels.RecipeSearchViewModel
<form asp-controller="Recipe" asp-action="Search">
    <p>
        <select name="searchType">
            <option value="AllRecipes">All recipes</option>
        </select>
        Search <input type="text" name="searchInfo" />
        <input type="submit" value="Search" />
    </p>
</form>





<ul>
    
    @foreach (var recipe in Model.Recipes)
    {
        <li> <a href="@recipe.Href">@recipe.title </a></li>
        <li> <img src="@recipe.Thumbnail" width="200" height="200" /></li>
        <li> <button type="submit" asp-controller="Recipe" asp-action="AddToFavorites" asp-route-Title="@recipe.title" asp-route-Ingredients="@recipe.Ingredients"asp-route-Href="@recipe.Href"asp-route-Thumbnail="@recipe.Thumbnail">Add to Favorites</button>  </li>        
    }

</ul>